{
  "name": "dynamo-light",
  "version": "1.3.2",
  "description": "A light weight library to use dynamodb tables",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "npm run reseedTestEnv && jest --config jestconfig.json",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "setupTestEnv": "cd test/local-dynamo && sls dynamodb install",
    "startDynamo": "cd test/local-dynamo && sls dynamodb start",
    "reseedTestEnv": "cd test/local-dynamo && sls dynamodb seed --seed=test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ChenLi0830/dynamoLight"
  },
  "dependencies": {
    "aws-sdk": "^2.1281.0"
  },
  "devDependencies": {
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.17",
    "big.js": "^6.2.1",
    "chai": "^4.3.7",
    "jest": "^29.3.1",
    "prettier": "^2.8.1",
    "serverless": "^3.26.0",
    "serverless-dynamodb-local": "^0.2.40",
    "ts-jest": "^29.0.3",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.9.4"
  },
  "keywords": [
    "dyanmodb",
    "dynamo",
    "amazon",
    "aws",
    "model",
    "schema"
  ],
  "files": [
    "lib/**/*"
  ],
  "author": "Chen Li",
  "license": "ISC"
}
